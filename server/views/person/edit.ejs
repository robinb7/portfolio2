<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- content for the edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">

            <h1><%= title %></h1>

            <form class="form" method="post">

                <div class="form-group">
                    <label for="usernameTextField">User Name</label>
                    <input type="text" class="form-control"
                        id="usernameTextField"
                        placeholder="Enter the username"
                        name="name" 
                        value = "<%= person.username %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="passwordTextField">Password</label>
                    <input type="text" class="form-control"
                        id="passwordTextField"
                        placeholder="Enter the user's password"
                        name="password" 
                        value = "<%= person.password %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                        id="emailTextField"
                        placeholder="Enter the user's email"
                        name="email" 
                        value = "<%= person.email %>"
                        required>
                </div>

                <div class="form-group">
                    <label for="displayNameTextField">Display Name</label>
                    <textarea type="text" class="form-control"
                        id="displayNameTextField"
                        placeholder="Enter the display name"
                        name="displayName" 
                        value = "<%= person.displayName %>"
                        required>
                </div>

                
                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control"
                        id="priceTextField"
                        placeholder="Enter the Book's Price"
                        name="price" 
                        value = "<%= book.price %>"
                        required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit
                </button>

                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel
                </a>
            </form>
        </div>

    </div>

</div>

<%- include ../partials/bottom_nav.ejs %>

<%- include ../partials/footer.ejs %>